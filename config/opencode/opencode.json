{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "model": "github-copilot/gpt-4.1",
  "autoshare": false,
  "autoupdate": true,
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "gpt-oss:20b": {
