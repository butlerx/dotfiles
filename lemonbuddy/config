[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[bar/i3]
monitor = eDP1
bottom = false
dock = false

width = 100%
height = 35

;offset_x = 0
;offset_y = 0

background = #00ffffff
foreground = #fff
;linecolor = #ff0000

spacing = 2
lineheight = 5

;locale = en_US.UTF-8

module-margin-left = 1
module-margin-right = 1

font-0 = Droid Sans:size=6;0
font-1 = FontAwesome:size=7:0
font-2 = MaterialIcons-Regular:size=7;0

modules-left = i3
modules-center = clock
modules-right =  wireless-network backlight cpu ram volume battery

[module/cpu]
type = internal/cpu
label =    %percentage%
format-underline = #c42
format-padding = 2

[module/ram]
type = internal/memory
label =   %gb_used%/%gb_total%
format-underline = #42c
format-padding = 2

[module/clock]
type = internal/date
date =  %Y-%m-%d  %H:%M
date-alt = %%{F#888}%A, %d %B %Y  %%{F#fff}%H:%M%%{F#666}:%%{F#fba922}%S%%{F-}
format-underline = #493
format-padding = 2

[module/volume]
type = internal/volume
format-volume-underline = #933484
format-volume-padding = 2
format-muted-underline = #933484
format-muted-padding = 2
; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = <ramp-volume> <label-volume>
; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
format-muted = <label-muted>
label-volume = %percentage%
label-muted =  Mute
bar-volume-width = 25
bar-volume-indicator = 
bar-volume-fill = ─
bar-volume-empty = ─
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/i3]
type = internal/i3
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-default = 
pin-workspaces = true

label-focused = %index% %icon%
label-focused-foreground = #ffffff
label-focused-background = #3f3f3f
label-focused-underline = #fba922
label-focused-padding = 4
label-unfocused = %index% %icon%
label-unfocused-padding = 4
label-visible = %index% %icon%
label-visible-underline = #555555
label-visible-padding = 4
label-urgent = %index% %icon%
label-urgent-foreground = #000000
label-urgent-background = #bd2c40
label-urgent-padding = 4

[module/battery]
type = internal/battery
; This is useful in case the battery never reports 100% charge
full_at = 99
; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC
poll_interval = 3
format-padding = 2
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
label-charging = %percentage%
format-charging-underline = #859900
label-discharging = %percentage%
format-discharging-underline = #859900
label-full = %percentage%
format-full-underline = #859900
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate_ms = 750

[module/backlight]
type = internal/backlight
; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
card = intel_backlight
; Available tags:
;   <label> (default)
;   <ramp>
;   <bar>
format-underline = #267682
format-padding = 2
format = <ramp> <label>
label = %percentage%
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 

[module/wireless-network]
type = internal/network
interface = wlp58s0
interval = 3.0
format-connected-underline = #D95B43
format-disconnected-underline = #D95B43
; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected = <ramp-signal> <label-connected>
; Available tags:
;   <label-disconnected> (default)
format-disconnected = <label-disconnected>

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %linkspeed% [wired]
; Default:  %ifname% %local_ip%
label-connected = %essid% %local_ip%
label-connected-foreground = #eefafafa
label-disconnected =  not connected
label-disconnected-foreground = #66ffffff
; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %linkspeed% [wired]
; Default: (none)
label-packetloss = %linkspeed%
label-packetloss-foreground = #eefafafa

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 

